const BASE_URL = process.env.NEXT_PUBLIC_SITE_URL || 'https://dhavaflix.myvnc.com';

async function generateSitemap() {
  try {
    const response = await fetch(`${BASE_URL}/api/tmdb?path=movie/popular`);
    const movies = await response.json();

    const today = new Date().toISOString().split("T")[0];

    const movieUrls = movies.results.map(movie => {
      return `
        <url>
          <loc>${BASE_URL}/movie/${movie.id}</loc>
          <lastmod>${today}</lastmod>
          <changefreq>daily</changefreq>
          <priority>0.8</priority>
        </url>
      `;
    }).join('');

    return `<?xml version="1.0" encoding="UTF-8"?>
      <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
        <url>
          <loc>${BASE_URL}</loc>
          <lastmod>${today}</lastmod>
          <changefreq>daily</changefreq>
          <priority>1.0</priority>
        </url>
        ${movieUrls}
      </urlset>
    `;
  } catch (err) {
    console.error("Sitemap generation failed:", err);
    return `<?xml version="1.0" encoding="UTF-8"?>
      <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
        <url><loc>${BASE_URL}</loc></url>
      </urlset>`;
  }
}

function Sitemap() {}

export async function getServerSideProps({ res }) {
  const sitemap = await generateSitemap();

  res.setHeader('Content-Type', 'text/xml');
  res.write(sitemap);
  res.end();

  return { props: {} };
}

export default Sitemap;
